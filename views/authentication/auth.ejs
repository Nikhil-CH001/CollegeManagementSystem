<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <%- include("../partials/navbar") %>
        <section
            class="min-h-screen flex items-center justify-center bg-gray-to-br from-purple-100 via-pink-200 to-yellow-100 px-4 py-12">
            <div
                class="bg-white rounded-3xl shadow-2xl max-w-4xl w-full overflow-hidden transition-transform transform hover:scale-105 duration-300">

                <!-- Tab Switcher -->
                <div class="flex bg-gray-50 border-b border-gray-200 rounded-t-xl overflow-hidden shadow-inner">
                    <button id="loginTab"
                        class="w-1/2 py-4 px-6 text-lg font-semibold text-gray-700 hover:text-red-600 transition-all duration-300 focus:outline-none active-tab">
                        Login
                    </button>
                    <button id="registerTab"
                        class="w-1/2 py-4 px-6 text-lg font-semibold text-gray-700 hover:text-red-600 transition-all duration-300 focus:outline-none">
                        Register
                    </button>
                </div>

                <!-- Form Wrapper -->
                <div class="p-8 bg-white">
                    <!-- Login Form -->
                    <form action="/login" method="post" id="loginForm"
                        class="space-y-6 transition-opacity duration-500 opacity-1">
                        <div>
                            <label class="block text-sm font-medium text-gray-600 mb-2">Email</label>
                            <input type="email" name="email"
                                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-400 transition focus:shadow-lg"
                                placeholder="example@example.com" required />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600 mb-2">Password</label>
                            <input type="password" name="password"
                                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-400 transition focus:shadow-lg"
                                placeholder="••••••••" required />
                        </div>
                        <button type="submit"
                            class="w-full bg-gradient-to-r from-pink-500 to-red-500 text-white py-3 px-6 rounded-xl font-semibold shadow-lg hover:from-pink-600 hover:to-red-600 transition-transform transform hover:scale-105 duration-300">
                            Login
                        </button>
                        <div class="text-center text-sm text-gray-600 mt-2">
                            Don’t have an account?
                            <a href="#" onclick="switchToRegister()"
                                class="text-pink-600 hover:underline font-medium">Register here</a>
                        </div>

                        <div class="my-4 text-center text-gray-500 font-medium">OR</div>

                        <div class="flex flex-col gap-3">
                            <a href="/auth/google"
                                class="flex items-center justify-center gap-2 px-4 py-2 border rounded-lg shadow hover:shadow-md text-gray-700 bg-white">
                                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg"
                                    class="w-5 h-5" />
                                Continue with Google
                            </a>
                            <a href="/auth/facebook"
                                class="flex items-center justify-center gap-2 px-4 py-2 border rounded-lg shadow hover:shadow-md text-gray-700 bg-white">
                                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/facebook/facebook-original.svg"
                                    class="w-5 h-5" />
                                Continue with Facebook
                            </a>
                        </div>

                    </form>

                    <!-- Register Form (hidden by default) -->
                    <form action="/register" method="post" id="registerForm"
                        class="space-y-6 hidden opacity-0 transition-opacity duration-500">
                        <div>
                            <label class="block text-sm font-medium text-gray-600 mb-2">Username</label>
                            <input type="text" name="username"
                                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-400 transition focus:shadow-lg"
                                placeholder="John Doe" required />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600 mb-2">Email</label>
                            <input type="email" name="email"
                                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-400 transition focus:shadow-lg"
                                placeholder="example@example.com" required />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600 mb-2">Password</label>
                            <input type="password" name="password"
                                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-400 transition focus:shadow-lg"
                                placeholder="••••••••" required />
                        </div>

                        <button type="submit"
                            class="w-full bg-gradient-to-r from-pink-500 to-red-500 text-white py-3 px-6 rounded-xl font-semibold shadow-lg hover:from-pink-600 hover:to-red-600 transition-transform transform hover:scale-105 duration-300">
                            Register
                        </button>
                        <div class="text-center text-sm text-gray-600 mt-2">
                            Already have an account?
                            <a href="#" onclick="switchToLogin()" class="text-pink-600 hover:underline font-medium">Sign
                                in here</a>
                        </div>

                        <div class="my-4 text-center text-gray-500 font-medium">OR</div>

                        <div class="flex flex-col gap-3">
                            <a href="/auth/google"
                                class="flex items-center justify-center gap-2 px-4 py-2 border rounded-lg shadow hover:shadow-md text-gray-700 bg-white">
                                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg"
                                    class="w-5 h-5" />
                                Continue with Google
                            </a>
                            <a href="/auth/facebook"
                                class="flex items-center justify-center gap-2 px-4 py-2 border rounded-lg shadow hover:shadow-md text-gray-700 bg-white">
                                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/facebook/facebook-original.svg"
                                    class="w-5 h-5" />
                                Continue with Facebook
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Toggle Script -->
            <script>
                const loginTab = document.getElementById('loginTab');
                const registerTab = document.getElementById('registerTab');
                const loginForm = document.getElementById('loginForm');
                const registerForm = document.getElementById('registerForm');

                function switchToLogin() {
                    loginForm.classList.remove('hidden');
                    loginForm.classList.remove('opacity-0');
                    loginForm.classList.add('opacity-100');
                    registerForm.classList.add('hidden');
                    registerForm.classList.remove('opacity-100');
                    registerForm.classList.add('opacity-0');
                    loginTab.classList.add('text-red-600', 'border-b-4', 'border-red-600');
                    loginTab.classList.remove('text-gray-700', 'border-b-2');
                    registerTab.classList.remove('text-red-600', 'border-b-4', 'border-red-600');
                    registerTab.classList.add('text-gray-700', 'border-b-2');
                }

                function switchToRegister() {
                    registerForm.classList.remove('hidden');
                    registerForm.classList.remove('opacity-0');
                    registerForm.classList.add('opacity-100');
                    loginForm.classList.add('hidden');
                    loginForm.classList.remove('opacity-100');
                    loginForm.classList.add('opacity-0');
                    registerTab.classList.add('text-red-600', 'border-b-4', 'border-red-600');
                    registerTab.classList.remove('text-gray-700', 'border-b-2');
                    loginTab.classList.remove('text-red-600', 'border-b-4', 'border-red-600');
                    loginTab.classList.add('text-gray-700', 'border-b-2');
                }

                loginTab.addEventListener('click', switchToLogin);
                registerTab.addEventListener('click', switchToRegister);

                // Initialize default tab
                switchToLogin();
            </script>

            <style>
                /* Optional: Add smooth transition for opacity */
                #loginForm,
                #registerForm {
                    transition: opacity 0.5s ease;
                }
            </style>
        </section>
        <%- include("../partials/footer") %>
</body>

</html>